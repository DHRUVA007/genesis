<body>

    <%- include ("./nav.ejs") %>

        <div class="p-5  container">
            <div class="p-5">
                <h1>New Blog</h1>
            </div>
            <form action='/blog/new672341' method="POST">
                <div class="p-4 ">
                    <label for="title">
                        <h3>Title</h3>
                    </label>
                    <input required value="<%= blogs.title %>" type="text" class="form-control" name="title">
                </div>
                <div class="p-4 ">
                    <label for="yourname">
                        <h3>Writer Name</h3>
                    </label>
                    <input required value="<%= blogs.wname %>" type="yourname" class="form-control" name="wname">
                </div>
                <div class="p-4 ">
                    <label for="title">
                        <h3>Paragraph One Title</h3>
                    </label>
                    <input required value='<%= blogs.p1t %>'type="text" class="form-control" name="p1t">
                </div>
                <div class="p-4 form-group">
                    <label for="textarea">
                        <h3>paragraph One Write Here</h3>
                    </label>
                    <textarea required class="form-control height"  name="p1"><%= blogs.p1 %></textarea>

                </div>

                <div class="p-4 ">
                    <label for="title">
                        <h3>Paragraph Two Title</h3>
                    </label>
                    <input  value="<%= blogs.p2t %>"ntype="text" class="form-control" name="p2t">
                </div>
                <div class="p-4 form-group">
                    <label for="textarea">
                        <h3>paragraph Two Write Here</h3>
                    </label>
                    <textarea  class="form-control height"  name="p2"><%= blogs.p2 %></textarea>

                </div>
                <a href="/" class="btn btn-secondary">Cancel</a>
                <button type="submit" class=" btn btn-primary">Save </button>
            </form>
        </div>
</body>

</html>